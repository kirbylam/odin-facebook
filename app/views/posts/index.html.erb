<%= render 'layouts/header' %>

<h1>Timeline</h1>

<%= render 'form', post: @post %>

<body>
  <% @posts.each do |post| %>
    <div id='box'>
      <div id='name'>
        <%= post.author.full_name %>
      </div>
      <div>
        <%= post.body %>
      </div>
      <div id='like_block'>
        <div id='like_button_<%= post.id %>'>
          <%= render 'like_button', post: post %>
        </div>
        <div id='likes_<%= post.id %>'>
          <%= post.likes %>
        </div>
      </div>
    </div>
    </div>
  <% end %>
</body>
